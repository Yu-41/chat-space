.chat-main
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group hoge-group
      %ul.main-header__left-box__member-list
        Member:
        %li.main-header__left-box__member-list hoge
    %a{:href => "#"}
      .main-header__edit-btn Edit
  .messages
    .message
      .message__upper-info
        %p.message__upper-info__talker hoge
        %p.message__upper-info__date 2020/5/8 7:00
      %p.message__text おはよう
      .message__upper-info
        %p.message__upper-info__talker hoge
        %p.message__upper-info__date 2020/5/8 12:00
      %p.message__text こんにちは
  .form
    %form
      .input-box
        %input.input-box__text{type: 'text', placeholder: 'type a message'}
        %label.input-box__image
          = icon('far', 'image')
          %input.input-box__image__file{type: "file"}
      %input.submit-btn{type: 'submit', value: 'Send'}